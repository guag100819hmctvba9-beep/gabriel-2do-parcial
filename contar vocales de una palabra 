#include <stdio.h>

int main(){
    int opcion;
    char palabra[50];
    int i,cont;

    do{
        system("cls");
        printf("\n--- CONTAR VOCALES ---\n");
        printf("1.- Contar\n");
        printf("2.- Salir\n");
        scanf("%d",&opcion);

        switch(opcion){
        case 1:
            cont = 0;
            printf("Escribe una palabra: ");
            scanf("%s", palabra);

            for(i=0; palabra[i]!='\0'; i++){
                char c = palabra[i];
                if(c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||
                   c=='A'||c=='E'||c=='I'||c=='O'||c=='U')
                    cont++;
            }

            printf("Vocales: %d", cont);
            break;

        case 2:
            printf("Adios");
            break;

        default:
            printf("Opcion no valida");
        }

        printf("\n");
        system("pause");

    }while(opcion != 2);

    return 0;
}