#include <stdio.h>

int main(){
    int opcion,a,b,c;

    do{
        system("cls");
        printf("\n--- NUMERO MAYOR ---\n");
        printf("1.- Calcular mayor\n");
        printf("2.- Salir\n");
        scanf("%d",&opcion);

        switch(opcion){
        case 1:
            printf("A: "); scanf("%d",&a);
            printf("B: "); scanf("%d",&b);
            printf("C: "); scanf("%d",&c);

            if(a>b && a>c) printf("El mayor es %d",a);
            else if(b>a && b>c) printf("El mayor es %d",b);
            else printf("El mayor es %d",c);
            break;

        case 2:
            printf("Adios");
            break;

        default:
            printf("Opcion no valida");
        }

        printf("\n");
        system("pause");

    }while(opcion != 2);

    return 0;
}