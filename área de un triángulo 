#include <stdio.h>

int main(){
    int opcion;
    float b,h;

    do{
        system("cls");
        printf("\n--- AREA DE TRIANGULO ---\n");
        printf("1.- Calcular\n");
        printf("2.- Salir\n");
        scanf("%d",&opcion);

        switch(opcion){
        case 1:
            printf("Base: "); scanf("%f",&b);
            printf("Altura: "); scanf("%f",&h);
            printf("Area: %.2f", (b*h)/2);
            break;

        case 2:
            printf("Adios");
            break;

        default:
            printf("Opcion no valida");
        }

        printf("\n");
        system("pause");

    }while(opcion != 2);

    return 0;
}