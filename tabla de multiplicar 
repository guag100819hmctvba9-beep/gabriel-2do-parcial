#include <stdio.h>

int main(){
    int n, opcion;

    do{
        system("cls");
        printf("\n--- TABLA DE MULTIPLICAR ---\n");
        printf("1.- Mostrar tabla\n");
        printf("2.- Salir\n");
        scanf("%d",&opcion);

        switch(opcion){
        case 1:
            printf("Numero: ");
            scanf("%d",&n);
            for(int i=1;i<=10;i++)
                printf("%d x %d = %d\n",n,i,n*i);
            break;

        case 2:
            printf("Adios");
            break;

        default:
            printf("Opcion no valida");
        }

        printf("\n");
        system("pause");

    }while(opcion != 2);

    return 0;
}