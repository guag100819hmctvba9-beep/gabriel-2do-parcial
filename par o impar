#include <stdio.h>

int main(){
    int opcion, n;

    do{
        system("cls");
        printf("\n--- PAR O IMPAR ---\n");
        printf("1.- Verificar numero\n");
        printf("2.- Salir\n");
        scanf("%d",&opcion);

        switch(opcion){
        case 1:
            printf("Ingresa un numero: ");
            scanf("%d",&n);
            if(n%2==0) printf("Es par");
            else printf("Es impar");
            break;

        case 2:
            printf("Adios");
            break;

        default:
            printf("Opcion no valida");
        }

        printf("\n");
        system("pause");
    }while(opcion != 2);

    return 0;
}