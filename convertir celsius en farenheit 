#include <stdio.h>

int main(){
    int opcion;
    float c,f;

    do{
        system("cls");
        printf("\n--- CONVERTIDOR ---\n");
        printf("1.- C a F\n");
        printf("2.- F a C\n");
        printf("3.- Salir\n");
        scanf("%d",&opcion);

        switch(opcion){
        case 1:
            printf("Celsius: "); scanf("%f",&c);
            f = (c * 9/5) + 32;
            printf("Fahrenheit: %.2f", f);
            break;

        case 2:
            printf("Fahrenheit: "); scanf("%f",&f);
            c = (f - 32) * 5/9;
            printf("Celsius: %.2f", c);
            break;

        case 3:
            printf("Adios");
            break;

        default:
            printf("Opcion no valida");
        }

        printf("\n");
        system("pause");

    }while(opcion != 3);

    return 0;
}